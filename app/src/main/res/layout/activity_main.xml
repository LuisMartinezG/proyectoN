<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luismartinez.manejandousuario.MainActivity">

    <Button
        android:id="@+id/btnVMostrarUsuarios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:text="Mostrar Usuario"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVListarUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVRegistrarUsuario" />

    <Button
        android:id="@+id/btnVRegistrarUsuario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="63dp"
        android:text="Registrar Usuario"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVMostrarUsuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVListarUsuarios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:text="Listar Usuarios"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVMostrarUsuarios" />

</android.support.constraint.ConstraintLayout>
