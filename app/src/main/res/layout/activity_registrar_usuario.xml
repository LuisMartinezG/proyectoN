<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:actionBarNavMode="@mipmap/female"
    tools:context="com.example.luismartinez.manejandousuario.RegistrarUsuarioActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/lblVTituloMostrarUsuario"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="Registro de Usuarios"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEdVNombreRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtEdVApellidoRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/txtEdVApellidoRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtEdVNombreRegistro"
        app:layout_constraintTop_toTopOf="@+id/txtEdVNombreRegistro" />

    <EditText
        android:id="@+id/txtEdVEdadRegistro"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="29dp"
        android:layout_marginStart="27dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/swtVSexoRegistro"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="5dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="114dp"
        android:layout_marginStart="27dp"
        android:text="Edad:"
        app:layout_constraintBottom_toTopOf="@+id/txtEdVEdadRegistro"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Sexo"
        app:layout_constraintBottom_toTopOf="@+id/swtVSexoRegistro"
        app:layout_constraintEnd_toEndOf="@+id/swtVSexoRegistro" />

    <Spinner
        android:id="@+id/spnVDeporteRegistro"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="93dp"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="93dp"
        android:entries="@array/cboDeportes"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="Deporte Favorito"
        app:layout_constraintBottom_toTopOf="@+id/spnVDeporteRegistro"
        app:layout_constraintStart_toStartOf="@+id/spnVDeporteRegistro" />

    <EditText
        android:id="@+id/txtEdVRutRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:hint="Rut"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Nombre:"
        app:layout_constraintStart_toStartOf="@+id/txtEdVNombreRegistro"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="14dp"
        android:text="Apellido:"
        app:layout_constraintBottom_toTopOf="@+id/txtEdVApellidoRegistro"
        app:layout_constraintStart_toEndOf="@+id/txtEdVNombreRegistro" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Rut:"
        app:layout_constraintStart_toStartOf="@+id/txtEdVNombreRegistro"
        app:layout_constraintTop_toBottomOf="@+id/txtEdVNombreRegistro" />

    <Button
        android:id="@+id/btnVRegistrarRegistro"
        android:layout_width="240dp"
        android:layout_height="96dp"
        android:layout_marginBottom="52dp"
        android:layout_marginStart="16dp"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/swtVSexoRegistro"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/male" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swtVSexoRegistro"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/female" />


    <Button
        android:id="@+id/btnVVolverDesdeRegistroUsu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVRegistrarRegistro" />

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="97dp"
        android:layout_height="76dp"
        android:layout_marginBottom="68dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="367dp" />

        <TextView
            android:id="@+id/lblVCantidadUsus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="284dp"
            tools:layout_editor_absoluteY="389dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuarios"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="296dp"
            tools:layout_editor_absoluteY="421dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
